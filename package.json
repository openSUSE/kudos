{
  "name": "opensuse-kudos",
  "version": "1.0.0",
  "description": "openSUSE Kudos â€” community appreciation and recognition platform",
  "type": "module",
  "license": "Apache-2.0",
  "scripts": {
    "frontend": "vite --host",
    "backend": "node backend/src/app.js",
    "dev": "npm-run-all -p backend frontend",
    "build:frontend": "vite build --outDir ../backend/public",
    "build:backend": "npx prisma generate --schema=backend/prisma/schema.prisma && node backend/prisma/seed.js",
    "build:all": "npm run build:backend && npm run build:frontend",
    "start": "node backend/src/app.js",
    "clean:prod": "npm prune --omit=dev && rm -rf node_modules/prisma && find node_modules/@prisma/client -type f -name 'libquery_engine-*.so.node' ! -name 'libquery_engine-linux-musl.so.node' -delete 2>/dev/null || true"
  },
  "dependencies": {
    "@prisma/client": "^6.2.1",
    "bcryptjs": "^3.0.3",
    "cookie-parser": "^1.4.7",
    "cors": "^2.8.5",
    "express": "^4.21.1",
    "express-session": "^1.18.2",
    "handlebars": "^4.7.8",
    "lru-cache": "^11.1.1",
    "nanoid": "^5.0.8",
    "nodemailer": "^7.0.11",
    "openid-client": "^5.6.2",
    "pinia": "^3.0.4",
    "satori": "^0.10.14",
    "session-file-store": "^1.5.0",
    "sharp": "^0.33.4",
    "vue-router": "^4.6.3"
  },
  "devDependencies": {
    "@vitejs/plugin-vue": "^6.0.1",
    "npm-run-all": "^4.1.5",
    "prisma": "^6.2.1",
    "vite": "^7.2.2"
  },
  "engines": {
    "node": ">=20.0.0"
  }
}
