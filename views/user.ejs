<link rel="stylesheet" href="/css/user.css"/>
<section class="dialog flip player-card">
  <h1>🦎 <%= user.username %>’s Player Card</h1>
  
  <div class="player-info">
    <img src="<%= user.avatarUrl || '/avatars/default.png' %>" 
         alt="<%= user.username %>"
         class="avatar-large"/>
    
    <div class="player-stats">
      <p>🧑‍💻 Role: <%= user.role %></p>
      <p>💚 Kudos Given: <%= given %></p>
      <p>💌 Kudos Received: <%= received %></p>
    </div>
  </div>

  <h2>🏅 Achievements</h2>
  <% if (badges.length > 0) { %>
    <div class="achievement-grid">
      <% badges.forEach(b => { %>
        <a href="/achievement/<%= b.achievement.id %>" class="achievement-card">
          <img src="<%= b.achievement.icon %>" 
               alt="<%= b.achievement.title %>" 
               class="achievement-icon"/>
          <div>
            <h3><%= b.achievement.title %></h3>
            <p><%= b.achievement.description %></p>
          </div>
        </a>
      <% }) %>
    </div>
  <% } else { %>
    <p class="no-achievements">No achievements yet. Keep spreading kudos! 🦎</p>
  <% } %>
</section>
