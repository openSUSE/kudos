<link rel="stylesheet" href="/css/board.css">

<section class="dialog flip">
  <h1>🏅 All Achievements</h1>
  <p class="subtitle">
    Collect badges by giving and receiving kudos! Locked ones appear grayed out.
  </p>

  <div class="achievement-grid small">
    <% achievements.forEach(a => { 
         const unlocked = myAchievements.some(m => m.achievementId === a.id);
    %>
      <div class="achievement-card <%= currentUser && !unlocked ? 'locked' : '' %>">
        <img src="<%= a.picture || '/achievements/chameleon.svg' %>"
             alt="<%= a.title %>" 
             class="achievement-icon" />
        <div class="achievement-info">
          <h3><%= a.title %></h3>
          <p><%= a.description %></p>
        </div>
      </div>
    <% }) %>
  </div>
</section>
