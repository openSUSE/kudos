"if (res.ok) {\n"
"allUsers = await res.json();\n"
"const auth = JSON.parse(localStorage.getItem(\"user\"));\n"
"if (auth?.username)\n"
"allUsers = allUsers.filter(u => u.username !== auth.username);\n"
"}\n"
"});\n"
"\n"
