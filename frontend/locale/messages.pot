"const router = useRouter();\n"
"const query = ref(\"\");\n"
"const suggestions = ref([]);\n"
"const selectedUser = ref(null);\n"
"const categories = ref([]);\n"
"const selectedCategory = ref(\"\"); // âœ… FIXED missing variable\n"
"const message = ref(\"\");\n"
