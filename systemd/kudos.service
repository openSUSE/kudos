[Unit]
Description=openSUSE Kudos Backend API
After=network.target kudos-init.service
Requires=kudos-init.service

[Service]
User=kudos
Group=kudos
Environment=NODE_ENV=production
ExecStart=/usr/bin/node /usr/lib/kudos/backend/src/app.js
Restart=on-failure
RestartSec=5
RestartSteps=2
RestartMaxDelaySec=10m
StartLimitBurst=2

[Install]
WantedBy=multi-user.target